datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String     @id
  email      String
  signInName String
  createdAt  DateTime
  tasks      Task[]
  Favorite   Favorite[]
  Work       Work[]
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  imageKey  String?
  createdAt DateTime
  Author    User     @relation(fields: [authorId], references: [id])
  authorId  String
}

model Work {
  id        String     @id
  novelUrl  String
  title     String
  author    String
  status    String
  errorMsg  String?
  createdAt DateTime
  Author    User       @relation(fields: [authorId], references: [id])
  authorId  String
  Favorite  Favorite[]
}

model History {
  id        String   @id
  novelUrl  String
  title     String
  author    String
  status    String
  errorMsg  String?
  createdAt DateTime
}

model Favorite {
  id        String   @id
  favorite  Work     @relation(fields: [workId], references: [id])
  Author    User     @relation(fields: [authorId], references: [id])
  createdAt DateTime
  authorId  String
  workId    String
}
